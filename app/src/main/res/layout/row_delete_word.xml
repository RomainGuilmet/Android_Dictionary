<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Head"
        android:id="@+id/textHeader"
        android:textColor="@android:color/black"
        android:paddingRight="@dimen/edit_text_margin"
        android:paddingEnd="@dimen/edit_text_margin"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/deleteWordBox"
        android:layout_alignLeft="@+id/textSub"
        android:layout_alignStart="@+id/textSub" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sub"
        android:id="@+id/textSub"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/edit_text_margin"
        android:layout_marginStart="@dimen/edit_text_margin"
        android:paddingRight="@dimen/edit_text_margin"
        android:paddingEnd="@dimen/edit_text_margin"
        android:singleLine="true"
        android:layout_below="@+id/textHeader"
        android:layout_toLeftOf="@+id/deleteWordBox"
        android:layout_toStartOf="@+id/deleteWordBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteWordBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textSub"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/edit_text_margin"
        android:layout_marginRight="@dimen/edit_text_margin"/>

</RelativeLayout>